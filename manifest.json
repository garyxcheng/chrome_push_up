{
  "manifest_version": 2,

  "name": "Pushups",
  "description": "Go do pushups",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Click here!",
    "default_popup": "options.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
     "matches": ["<all_urls>"],
     "css": ["content.css"],
     "js": ["content.js"]
    }
  ]
}
